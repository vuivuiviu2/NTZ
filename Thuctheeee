--------------------------------------------------
-- NTZrise (420s, t·ªëi ƒëa 2 l·∫ßn)
--------------------------------------------------

coroutine.wrap(function()

    local spawnCount = 0
    local maxSpawns = 2

    while spawnCount < maxSpawns do
        task.wait(543)
        print("üî• NTZrise ready...")
        LatestRoom.Changed:Wait()

        spawnCount += 1
        print("üíÄ NTZrise spawning ("..spawnCount.."/2)")

        loadstring(game:HttpGet(
            "https://raw.githubusercontent.com/vuivuiviu2/NTZ/refs/heads/main/NTZrise"
        ))()
    end

    print("üõë NTZrise reached max limit")

end)()
