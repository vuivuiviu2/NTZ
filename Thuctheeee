--============================--
--        NTZ ENTITY SYSTEM
--============================--

local LatestRoom = game.ReplicatedStorage.GameData.LatestRoom

--------------------------------------------------
-- A-60 (1/50 m·ªói c·ª≠a)
--------------------------------------------------

coroutine.wrap(function()

    local jobId = game.JobId
    local numbers = jobId:gsub("%D+", "")
    local seed = tonumber(numbers:sub(1,9)) or os.time()
    local rng = Random.new(seed)

    LatestRoom.Changed:Connect(function()

        local roll = rng:NextInteger(1,50)
        print("üé≤ A-60 Roll:", roll, "/50")

        if roll == 1 then
            print("‚ö° A-60 SPAWNING")
            loadstring(game:HttpGet(
                "https://raw.githubusercontent.com/vuivuiviu2/NTZ/refs/heads/main/60"
            ))()
        end

    end)

end)()

--------------------------------------------------
-- Huytran (60s - kh√¥ng ƒë·ª£i c·ª≠a)
--------------------------------------------------

coroutine.wrap(function()
    while true do
        task.wait(40)
        print("üòà Huytran spawning")
        loadstring(game:HttpGet(
            "https://raw.githubusercontent.com/vuivuiviu2/NTZ/refs/heads/main/Huytran"
        ))()
    end
end)()

